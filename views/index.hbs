<!Doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8" />
  <!--Let browser know website is optimized for mobile-->
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <title>Youtube Iframe API</title>

  <!--Import Google Icon Font-->
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
  <!--  -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  <!--Import materialize.css-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" />

  <!-- Style Sheet FIle -->
  <link rel="stylesheet" href="../public/css/style.css" />

  <style>
    #list {
      height: 500px;
      overflow-y: auto;
    }
  </style>
</head>

<body>
  <!-- Header -->
  <header>


    <nav class="black">
      <div class="nav-wrapper container">
        <a href="#" class="brand-logo">Logo</a>
        <ul id="nav-mobile" class="right hide-on-med-and-down">
          <li><a href="#">Menu</a></li>
        </ul>
      </div>
    </nav>
  </header>
  <!-- Main -->
  <main role="main" class="container">
    <!-- Section -->
    <section class="inframe-filde">
      <div class="row">
        {{!-- <div class="col s12 offset-xl3 col xl6">
          <div id="ytplayer"></div>
        </div> --}}
        <form method="post" id="image-form" enctype="multipart/form-data">
          <div class="col s12">
            <div class="card">
              <div class="card-content">
                <div class="row">
                  <div class="col l6 offset-l1">
                    <form role="form">
                      <div class="divider"></div>
                      <div class="section">
                        <h5>Name</h5>
                        <div class="input-field url-input">
                          <i class="material-icons prefix">person</i>
                          <input placeholder="Name" id="name" type="text" class="validate">
                        </div>
                      </div>
                      <div class="divider"></div>

                      <div class="section">
                        <h5>Post Link</h5>
                        <div class="input-field url-input">
                          <i class="material-icons prefix">link</i>
                          <input placeholder="Post Link" id="original_url" type="text" class="validate">
                        </div>
                      </div>
                      <div class="divider"></div>

                      <div class="section">
                        <h5>Link To Share</h5>
                        <div class="input-field ">
                          <i class="material-icons prefix">screen_share</i>
                          <input placeholder="Post Link" id="embed_url" type='text' class="validate" readonly>
                        </div>
                      </div>
                      <div class="divider"></div>

                      <div class="section">
                        <h5>Upload Image</h5>
                        <div class="input-field file-field">
                          <div class="btn light-blue accent-4">
                            <span>Upload Img </span>
                            <input type="file" id='file' name="file" multiple>
                          </div>
                          <div class="file-path-wrapper">
                            <input class="file-path validate" type="text" placeholder="Upload">
                          </div>
                        </div>
                      </div>
                      <div class="divider"></div>

                      <div class="section">
                        <h5>Ifeam Code</h5>
                        <div class="input-field url-input">
                          <i class="material-icons prefix">code</i>
                          <input placeholder="Iframe code" id="iframe_code" type="text" class="validate" readonly>
                        </div>
                      </div>
                      <div class="divider"></div>

                      <div class="section">
                        <div id='show_video' class="video-container">

                          {{!-- <iframe src="https://www.youtube-nocookie.com/embed/J_QGZspO4gg" frameborder="0"
                          allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                          allowfullscreen>
                        </iframe> --}}
                        </div>
                      </div>
                      <div class="section">

                        <div class="save-button">
                          <input type="submit" class="btn waves-effect pink green accent-4" id="submit" value="Submit">
                        </div>
                      </div>
                    </form>
                  </div>
        </form>
        <div class="col l4">
          <div class="card">
            <div class="card-content">
              <div class="section">
                <div class="input-field">
                  <input type="text" id="date_start" class="datepicker" for placeholder="start" />
                  <label for="date_start">Start</label>
                </div>
              </div>
              <div class="section">
                <div class="input-field">
                  <input type='text' id="date_end" class="datepicker" required />
                  <label for="date_end">End</label>
                </div>
              </div>
              <div class="divider"></div>
              <div class="collection" id='list'>

              </div>
              <div class="save-button">
                <input type="button" class="btn waves-effect pink green accent-4" id="search" value="Search">
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
      </div>
      </div>
      </div>
    </section>
  </main>

  <!--JavaScript at end of body for optimized loading-->

  <!-- Materialize JS -->
  <!-- Compiled and minified JavaScript -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
  <!-- <script src="//cdn.embedly.com/widgets/platform.js" charset="UTF-8"></script> -->
  <script src="../public/javascript/main.js"></script>
  <!-- Platform JS -->
  <script src="../public/javascript/send.js"></script>
</body>

</html>